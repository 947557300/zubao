
.swiper-box{height: 124px;}
.banner{position: relative;}
.banner-image{width: 100%;}
.page-body {display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;}
.nav {display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;width: 100%;}
.nav-left {width: 180rpx;background-color: #f7f7f7;}
.nav-left-item {height: 86rpx;border-bottom: solid 1px #ececec;font-size: 28rpx;display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;-webkit-box-align: center;-webkit-align-items: center;-ms-flex-align: center;align-items: center;-webkit-box-pack: center;-webkit-justify-content: center;-ms-flex-pack: center;justify-content: center;color: #666;}
.nav-left-item:last-child{border-bottom: none;}
.active {color: #333;background-color: #fff;font-weight: 700;}
.nav-right {width: 570rpx;background-color: #fff;}
.nav-right-item {width: 100%;font-size: 28rpx;padding: 0 26rpx;-webkit-box-sizing: border-box;box-sizing: border-box;}
.item-header{padding-top: 36rpx;font-size: 24rpx;font-weight: 700;line-height: 24rpx;}
.item-state,.item-en,.item-kind{font-size: 20rpx;line-height: 20rpx;color: #999;}
.item-state{margin-top: 10rpx;}
.item-li{padding: 22rpx 0;position: relative;border-bottom: 1px solid #f1f1f1;height: 134rpx;}
.nav-right-item .item-li:last-child{border-bottom: none;}
.item-img{width: 134rpx;height: 134rpx;border-radius: 8rpx;}
.item-text{display: inline-block;vertical-align: top;margin-left: 16rpx;}
.item-title{font-size: 28rpx;line-height: 28rpx;font-weight: 700;}
.item-en{margin: 10rpx 0 8rpx 0;}
.item-price{font-size: 28rpx;line-height: 28rpx;font-weight: 700;margin-top: 28rpx;}
.plus-filled{position: absolute;bottom: 16rpx;right: 0;color: #81aad2;}
.fixed{position: fixed;top: 0;left: 206rpx;background: #fff;}

