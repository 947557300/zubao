<view class="container"><view class="banner" id="banner"><swiper class="swiper-box" autoplay="{{autoplay}}" interval="{{interval}}" circular="{{circular}}"><block wx:for="{{banner}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><image class="banner-image" src="{{item}}"></image></swiper-item></block></swiper></view><view class="page-body"><scroll-view class="nav-left" style="{{('height:'+height+'px')}}" scroll-y><block wx:for="{{shopList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['categoryClick',[index]]]]]}}" class="{{['nav-left-item',index==categoryActive?'active':'']}}" bindtap="__e">{{''+item.classify+''}}</view></block></scroll-view><scroll-view class="nav-right" style="{{('height:'+height+'px')}}" scroll-y scroll-top="{{scrollTop}}" scroll-with-animation id="rightItem" data-event-opts="{{[['scroll',[['scroll',['$event']]]]]}}" bindscroll="__e"><block wx:for="{{shopList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="nav-right-item" id="{{index===0?'first':''}}"><view class="item-header">{{item.classify}}</view><view hidden="{{!(item.state!=='')}}" class="item-state">{{item.state}}</view><block wx:for="{{item.data}}" wx:for-item="shop" wx:for-index="i" wx:key="i"><view class="item-li"><image class="item-img" src="http://placehold.it/50x50"></image><view class="item-text"><view class="item-title">{{shop.title}}</view><view class="item-en">{{shop.en}}</view><view class="item-kind">{{"默认："+shop.kind}}</view><view class="item-price">{{"￥"+shop.price}}</view><view class="plus-filled"><uni-icon vue-id="{{'1-'+index+'-'+i}}" type="plus-filled" bind:__l="__l"></uni-icon></view></view></view></block></view></block></scroll-view></view></view>